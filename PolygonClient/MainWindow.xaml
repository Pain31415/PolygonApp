<Window x:Class="PolygonClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PolygonClient"
        Title="Polygon Client" Height="450" Width="800">
    <Grid>
        <Button Name="SelectFileButton" Content="Select File" Click="SelectFileButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="FilePathTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Width="400"/>
        <Button Name="SendDataButton" Content="Send Data" Click="SendDataButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,50,0,0"/>
        <ListBox Name="PolygonsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" Width="760" Height="300"/>
    </Grid>
</Window>
